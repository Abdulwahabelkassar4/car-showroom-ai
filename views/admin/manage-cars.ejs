<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Cars - Car Showroom</title>
    <link rel="stylesheet" href="/css/ridex_dark_theme.css">
    <link rel="stylesheet" href="/css/admin_theme.css">
</head>
<body class="admin-body">
    <%- include('../partials/adminHeader') %>

    <main class="admin-main">
        <div class="admin-container">
            <h1 class="admin-title">Manage Cars</h1>
            
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Make</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (cars && cars.length > 0) { %>
                            <% cars.forEach(car => { %>
                                <tr>
                                    <td><%= car.id %></td>
                                    <td><%= car.make %></td>
                                    <td><%= car.model %></td>
                                    <td><%= car.year %></td>
                                    <td>$<%= car.price ? car.price.toLocaleString() : 'N/A' %></td>
                                    <td>
                                        <button class="action-btn edit-btn" onclick="editCar(<%= car.id %>)">Edit</button>
                                        <button class="action-btn delete-btn" onclick="deleteCar(<%= car.id %>)">Delete</button>
                                        <% if (car.sold !== 1) { %>
                                            <form method="POST" action="/admin/sales/<%= car.id %>" style="display:inline;" onsubmit="return confirm('Mark this car as sold?')">
                                              <input type="hidden" name="sold" value="1" />
                                              <button type="submit" class="btn btn-warning">Mark as Sold</button>
                                            </form>
                                          <% } else { %>
                                            <form method="POST" action="/admin/sales/<%= car.id %>" style="display:inline;" onsubmit="return confirm('Undo this sale?')">
                                              <input type="hidden" name="sold" value="0" />
                                              <button type="submit" class="btn btn-danger">Undo Sold</button>
                                            </form>
                                            <div class="sold-tag" style="color: gold; font-weight: bold; margin-top: 5px;">
                                              Sold on: <%= new Date(car.sold_date).toLocaleDateString() %>
                                            </div>
                                          <% } %>
                                          
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="no-data">No cars available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

        
        </div>
    </main>

    <script>
        function editCar(carId) {
            window.location.href = `/admin/edit-car/${carId}`;
        }

        function deleteCar(carId) {
            if (confirm('Are you sure you want to delete this car?')) {
                fetch(`/admin/cars/${carId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Failed to delete car');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the car');
                });
            }
        }
    </script>
</body>
</html> 